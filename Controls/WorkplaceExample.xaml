<UserControl x:Class="GraphicEditor.Controls.WorkplaceExample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GraphicEditor.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer x:Name="ScrollExample" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
            <Canvas x:Name="WorkPlaceCanvasExample" Background="{DynamicResource {x:Static SystemColors.InfoBrushKey}}" Height="4000" Width="4000" MouseLeftButtonDown="WorkPlaceCanvasExample_MouseLeftButtonDown" MouseLeftButtonUp="WorkPlaceCanvasExample_MouseLeftButtonUp" MouseMove="WorkPlaceCanvasExample_MouseMove" MouseRightButtonDown="WorkPlaceCanvasExample_MouseRightButtonDown" />
        </ScrollViewer>
    </Grid>
</UserControl>
