<Page x:Class="GraphicEditor.Workplace"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GraphicEditor"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Workplace">

    <Grid>
        <ScrollViewer x:Name="Scroll" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
            <Canvas x:Name="WorkPlaceCanvas" Background="{DynamicResource {x:Static SystemColors.InfoBrushKey}}" Height="4000" Width="4000" MouseRightButtonDown="WorkPlace_MouseRightButtonDown" MouseLeftButtonDown="WorkPlace_MouseLeftButtonDown" MouseMove="WorkPlace_MouseMove" MouseLeftButtonUp="WorkPlace_MouseLeftButtonUp" />
        </ScrollViewer>
    </Grid>
</Page>
